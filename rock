import random

# Welcome message
print("Welcome to Rock, Paper, Scissors Game!")
player_name = input("Enter your name: ")
print(f"Hello {player_name}! Let's start the game.\n")

# Main game loop for replay
while True:
    # Number of rounds
    rounds = int(input("How many rounds do you want to play? "))
    score = 0

    # Loop through each round
    for i in range(rounds):
        player_choice = input("Choose rock, paper, or scissors: ").lower()
        computer_choice = random.choice(["rock", "paper", "scissors"])
        print(f"Computer chose: {computer_choice}")

        # Decide winner for the round
        if player_choice == computer_choice:
            print("It's a tie!\n")
        elif (player_choice == "rock" and computer_choice == "scissors") or \
             (player_choice == "paper" and computer_choice == "rock") or \
             (player_choice == "scissors" and computer_choice == "paper"):
            print("You win this round!\n")
            score += 1
        else:
            print("You lose this round!\n")

    # Total score after all rounds
    print(f"Game Over! Your total score: {score}/{rounds}")

    # Announce overall winner
    if score > rounds // 2:
        print("ğŸ‰ Congratulations! You won the game!")
    elif score == rounds // 2:
        print("ğŸ¤ It's a tie!")
    else:
        print("ğŸ˜¢ Computer won the game!")

    # Ask if player wants to play again
    play_again = input("Do you want to play again? (yes/no): ").lower()
    if play_again != "yes":
        print("Thanks for playing! ğŸš€")
        break